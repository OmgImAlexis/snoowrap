{
	"compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "lib": ["esnext"],
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
		"outDir": "./dist",
        "esModuleInterop": true
    },
	"include": [
        "./src/*",
		"./src/**/*",
		"./test/**/*.spec.ts",
    ],
    "exclude": [
        "./src/snoowrap-tests.ts"
    ]
}